<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DatosFragment"
    android:background="@color/grisblack">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="15dp"
                android:gravity="end">

                <ToggleButton
                    android:id="@+id/btn_agregar"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="5dp"
                    android:textOn=""
                    android:textOff=""
                    android:background="@drawable/ic_agregar_a_lista"/>


                <ToggleButton
                    android:id="@+id/btn_guardar"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:textOn=""
                    android:textOff=""
                    android:background="@drawable/toggle_guardar"/>

                <ToggleButton
                    android:id="@+id/btn_vista"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:textOn=""
                    android:textOff=""
                    android:background="@drawable/toggle_vista"/>
                <ToggleButton
                    android:id="@+id/btn_favoritos"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:textOn=""
                    android:textOff=""
                    android:background="@drawable/toggle_corazon"/>

                <ToggleButton
                    android:id="@+id/btn_compartir"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:textOn=""
                    android:textOff=""
                    android:background="@drawable/ic_compartir"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="162dp"
                android:orientation="horizontal">


                <ImageView
                    android:id="@+id/imagenView"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:layout_margin="15dp"
                    android:src="@drawable/king_kong" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tituloView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:fontFamily="@font/littera_regular"
                        android:text="Godzila vs Kong"
                        android:textColor="@color/white"
                        android:textSize="15dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/subtituloView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/littera_regular"
                        android:text="Godzila vs Kong(2021)"
                        android:textColor="@color/white"
                        android:textSize="10dp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/clasificacionView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:background="@color/white"
                            android:fontFamily="@font/littera_regular"
                            android:padding="2dp"
                            android:text="B"
                            android:textSize="10dp"
                            android:textColor="@color/black"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/duracionView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="10dp"
                            android:background="@color/white"
                            android:fontFamily="@font/littera_regular"
                            android:padding="2dp"
                            android:textSize="10dp"
                            android:text="113 min"
                            android:textColor="@color/black"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/categoriaView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="5dp"
                            android:layout_marginTop="10dp"
                            android:background="@color/white"
                            android:fontFamily="@font/littera_regular"
                            android:padding="2dp"
                            android:text="Acción"
                            android:textSize="10dp"
                            android:textColor="@color/black"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:fontFamily="@font/littera_regular"
                            android:text="Director"
                            android:textColor="@color/white"
                            android:textSize="13dp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="50dp"
                            android:layout_marginTop="20dp"
                            android:fontFamily="@font/littera_regular"
                            android:text="Reparto"
                            android:textColor="@color/white"
                            android:textSize="13dp"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/directorView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/littera_regular"
                            android:text="Adam Wingward"
                            android:textColor="@color/white"
                            android:textSize="10dp" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/repartoView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="26dp"
                                android:fontFamily="@font/littera_regular"
                                android:text="Adam Wingward"
                                android:textColor="@color/white"
                                android:textSize="10dp" />


                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>


            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="12dp"
                android:fontFamily="@font/littera_regular"
                android:text="Calificación Media de los Usuarios"
                android:textColor="@color/white"
                android:textSize="12dp"
                android:textStyle="bold" />

            <RatingBar
                style="?android:attr/ratingBarStyleIndicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:rating="4.5" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="Trailer"
                android:textColor="@color/white"
                android:textSize="12dp"
                android:textStyle="bold" />

            <WebView
                android:id="@+id/videoView"
                android:layout_width="303dp"
                android:layout_height="162dp"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"></WebView>

            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="Sinopsis"
                android:textColor="@color/white"
                android:textSize="12dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/sinopsisView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Godzilla y Kong, dos de las fuerzas más poderosas de un planeta habitado por aterradoras criaturas, se enfrentan en un espectacular combate que sacude los cimientos de la humanidad. Monarch se embarca en una misión de alto riesgo y pone rumbo hacia territorios inexplorados para descubrir los orígenes de estos dos titanes, en un último esfuerzo por tratar de salvar a dos bestias que parecen tener las horas contadas sobre la faz de la Tierra."
                android:textColor="@color/white"
                android:textStyle="normal"
                android:padding="5dp"
                android:textSize="10dp"
                android:layout_marginLeft="20dp"
                android:fontFamily="@font/littera_regular"/>


        </LinearLayout>

    </ScrollView>

</FrameLayout>